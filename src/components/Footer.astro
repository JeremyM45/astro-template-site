---
const { lists } = Astro.props

---
<section id="footer">
  <div class="bg-gray-900 text-slate-200 text-center pb-24 mt-24 md:text-left">
    <div class="pt-6 md:pl-12">
      <h1 class="text-5xl font-bold"><span class="text-highlightRed">Company</span> Name</h1>
      <div class="flex flex-col justify-between text-left md:text-center md:flex-row">
        
        {lists.map(item => {
          return(
            <div class="mt-6 pl-6 md:mx-auto">
              <h1 class="border-b border-slate-400 text-xl font-bold">{item.title}</h1>
              <ul class="mt-6">
                {item.listItems.map(listItem => {
                  return(
                    <li class="py-2 border-b border-transparent hover:border-highlightRed hover:text-highlightRed"><a href="/">{listItem}</a></li>
                  )
                })}
              </ul>
            </div>
          )
        })}
      </div>
    </div>
  </div>
</section>